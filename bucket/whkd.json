{
    "version": "0.2.8",
    "description": "A simple hotkey daemon for Windows",
    "homepage": "https://github.com/LGUG2Z/whkd",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/LGUG2Z/whkd/releases/download/v0.2.8/whkd-0.2.8-x86_64-pc-windows-msvc.zip",
            "hash": "8abcc351a72d037ffc62be2086b050c5e47cfea9b4cf69e860793cc332ad0c18"
        }
    },
    "post_install": [
        "if (!(Test-Path \"$dir\\config\")) {",
        "    $ErrorActionPreference = \"SilentlyContinue\"",
        "    New-Item -ItemType Directory -Path \"$dir\\config\" *> $null",
        "}"
    ],
    "bin": "whkd.exe",
    "persist": "config",
    "env_set": {
        "WHKD_CONFIG_HOME": "$dir\\config"
    },
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/LGUG2Z/whkd/releases/download/v$version/whkd-$version-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$baseurl/checksums.txt"
        }
    }
}
